<%- include('partials/_header') -%>

  <body>

    <!-- Navigation -->
    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('img/home-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="site-heading">
                <h1>Clean Blog</h1>
                <span class="subheading">A Blog Theme by Start Bootstrap</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <% for (let i=0; i < blogs.length; i++) { %>
              <div class="post-preview">
                <a href="/posts/<%= blogs[i]._id %>">
                  <h2 class="post-title">
                    <%= blogs[i].title %>
                  </h2>
                  <h3 class="post-subtitle">
                    <%= blogs[i].detail %>
                  </h3>
                </a>
                <p class="post-meta">Posted by
                  <a> <%= blogs[i].author %> </a>
                  on <%= (blogs[i].dateCreated).toLocaleString() %>
                </p>
              </div>
              <hr>
              <% } %>


                <hr>
                <!-- Pager -->
                <% if (pages> 0 ) { %>
                  <div class="clearfix">
                    <% for (let i=1; i <=pages; i++) {%>
                      <% if (i==current) { %>
                        <a href="?page=<%= i %>" class="btn btn-primary btn active float-left mr-1"">
                          <%= i %>
                        </a>
                      <% } else { %>
                        <a href=" ?page=<%=i %>" class="btn btn-primary float-left mr-1"">
                          <%= i %>
                        </a>
                        <% } %>
                      <% } %>
                  </div>
                <% } %>

          </div>
        </div>
      </div>

      <hr>

      <!-- Footer -->
      <%- include('partials/_footer') -%>

  </body>

  </html>